<Window x:Class="WpfApp1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp1"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800" Loaded="Window_Loaded">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="38"/>
            <RowDefinition Height="183*"/>
            <RowDefinition Height="183*"/>
        </Grid.RowDefinitions>
        <DataGrid x:Name="dataGrid" Margin="0" Grid.Row="1" />
        <TextBox x:Name="textBox"  Margin="0" Grid.Row="2" AcceptsReturn="True" TextWrapping="Wrap" >
            
        </TextBox>
        <Button x:Name="button" Content="Button" HorizontalAlignment="Left" Margin="654,10,0,0" VerticalAlignment="Top" Width="112" Click="button_Click"/>

    </Grid>
</Window>
